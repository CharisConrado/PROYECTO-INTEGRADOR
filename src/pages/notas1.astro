---
import Aside from "../components/Aside.astro"
import Barranotas from "../components/Barranotas.astro"
---
<!DOCTYPE html>
<html lang="en">
    <head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			href="/logo2.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>Aula Global</title>
        

           
	</head>
    <body class="bg-gray-100 text-gray-900 font-sans">

        
        <Aside></Aside>
    
       
         
        <main class="ml-64 p-8">
            <Barranotas></Barranotas>

			<div class="bg-gray-100 p-8 flex justify-center">
				<div class="bg-white shadow-lg rounded-lg max-w-4xl w-full p-6">
					<h2 class="text-2xl font-bold text-center mb-6 text-gray-800">Reporte de notas</h2>
					
					<!-- Información del estudiante -->
					<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
						<div class="flex">
							<p class="text-gray-600 font-medium">Nombre del estudiante:</p>
							<p class="text-gray-800 font-semibold ml-1	">Juan Pérez</p>
						</div>
						<div class="flex">
							<p class="text-gray-600 font-medium">Grado:</p>
							<p class="text-gray-800 font-semibold ml-1">6°</p>
						</div>
						
					</div>
			
					<!-- Cuadrícula de notas -->
					<div class="grid grid-cols-1 sm:grid-cols-4 gap-4 border-t border-gray-200 pt-4">
						<!-- Encabezados de la tabla -->
						<div class="font-bold text-gray-700">Asignatura</div>
						<div class="font-bold text-gray-700 text-center">Primera seccion</div>
						<div class="font-bold text-gray-700 text-center">Segunda seccion</div>
						<div class="font-bold text-gray-700 text-center">Definitiva</div>
			
						<!-- Fila de ejemplo 1 -->
						<div class="py-2 text-gray-800">Español</div>
						<div class="py-2 text-center text-gray-800">85</div>
						<div class="py-2 text-center text-gray-800">90</div>
						<div class="py-2 text-center text-gray-800">88</div>
			
						<!-- Fila de ejemplo 2 -->
						<div class="py-2 text-gray-800">Inglés</div>
						<div class="py-2 text-center text-gray-800">78</div>
						<div class="py-2 text-center text-gray-800">85</div>
						<div class="py-2 text-center text-gray-800">82</div>
			
						<!-- Fila de ejemplo 3 -->
						<div class="py-2 text-gray-800">Sociales</div>
						<div class="py-2 text-center text-gray-800">92</div>
						<div class="py-2 text-center text-gray-800">88</div>
						<div class="py-2 text-center text-gray-800">91</div>
			
						<!-- Fila de ejemplo 4 -->
						<div class="py-2 text-gray-800">Ciencias</div>
						<div class="py-2 text-center text-gray-800">80</div>
						<div class="py-2 text-center text-gray-800">83</div>
						<div class="py-2 text-center text-gray-800">86</div>
			
						<!-- Fila de ejemplo 5 -->
						<div class="py-2 text-gray-800">Artistica</div>
						<div class="py-2 text-center text-gray-800">95</div>
						<div class="py-2 text-center text-gray-800">92</div>
						<div class="py-2 text-center text-gray-800">94</div>

						<div class="py-2 text-gray-800">Etica</div>
						<div class="py-2 text-center text-gray-800">95</div>
						<div class="py-2 text-center text-gray-800">92</div>
						<div class="py-2 text-center text-gray-800">94</div>

						<div class="py-2 text-gray-800">Informatica</div>
						<div class="py-2 text-center text-gray-800">95</div>
						<div class="py-2 text-center text-gray-800">92</div>
						<div class="py-2 text-center text-gray-800">94</div>
					</div>
			
					<!-- Promedio final -->
					<div class="border-t border-gray-200 mt-6 pt-4">
						<p class="text-gray-800 font-bold text-right">Promedio General: <span class="text-green-600">89.3</span></p>
					</div>
				</div>
			</div>
			
        
        </main>

        
    

    </body>
   
</html>